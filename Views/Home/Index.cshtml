@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}

<section class="py-2">
    <div class="container px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 300px;">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">Giá: @item.Price.ToString("#,##0") VND</p>
                            <button class="btn btn-outline-dark add-to-cart"
                                    data-product-id="@item.Id" data-quantity="1">
                                <i class="bi-cart-fill me-1"></i> Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


